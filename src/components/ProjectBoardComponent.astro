---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import { type CollectionEntry } from "astro:content";


const projects = await getCollection('projects');
const hasProjects = projects.length > 0;
---

<section id="portfolio" class="scroll-mt-20 z-10 h-screen w-full flex flex-col items-start gap-4รง
    bg-light-surface dark:bg-dark-surface">
    <h1>My Projects</h1>
    {hasProjects ? (
    <div class="project-grid container">
        {projects.map((project: CollectionEntry<"projects">) => 
            (<article id={project.id} class="project-card">
                <Image class="project-image" src={import.meta.env.BASE_URL+project.data.image} alt={project.data.title} width={1} height={1}/>
                <h2>{project.data.title}</h2>
                <p>{project.data.description}</p>
                <a class="button" href={project.data.link}>More...</a>
            </article>
            )
        )}
    </div>
    ) : (
    <p>No projects found. Check back later!</p>
    )
    }
</div>