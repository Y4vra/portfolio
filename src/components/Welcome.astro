---
import RotatingText from './RotatingText.jsx';
---

<section id="start" class="container centered">
	<h1>Hi, I'm Javier Carrasco Arango</h1>
	<p>
		 <RotatingText
      client:visible
	  initText="Aspiring software engineer passionate in "
      texts={['full stack development', 'cybersecurity', 'team leadership', 'lifelong learning']}
      mainClassName="text-rotate-main"
      staggerFrom="last"
      initial={{ y: '100%' }}
      animate={{ y: 0 }}
      exit={{ y: '-120%' }}
      staggerDuration={0.025}
      splitLevelClassName="overflow-hidden pb-0.5 sm:pb-1 md:pb-1"
      transition={{ type: 'spring', damping: 20, stiffness: 100,mass:0.8 }}
      rotationInterval={2000}
    /></p>
</section>

