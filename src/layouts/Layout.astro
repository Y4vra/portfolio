---
import "../styles/global.css";
import background from '../assets/background.svg';
---

<!doctype html>
<html class="transition-colors duration-5000 ease-in-out" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL+"/favicon.svg"} />
		<link rel="preconnect" href="https://rsms.me/">
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
		<title>Y4vra's portfolio</title>
		<script>if (window.matchMedia('(prefers-color-scheme: dark)').matches) document.documentElement.classList.toggle("dark");</script>
	</head>
	<body class="
		bg-light-bg dark:bg-dark-bg
		text-light-main-900 dark:text-dark-main-50">
		<slot name="navigation"/>
		<img id="background" class="fixed z-0 inset-0 w-full h-full object-cover filter blur-sm" src={background.src} alt="" fetchpriority="high" />
		<main class="relative z-10">
			<slot id="start" name="start"/>
			<slot id="portfolio" name="projects"/>
			<slot id="about" name="about"/>
			<slot id="contact" name="contact"/>
		</main>
	</body>
</html>

