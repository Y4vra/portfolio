---
import "../styles/global.css";
import DotGrid from "../components/background";
---

<!doctype html>
<html class="transition-colors duration-5000 ease-in-out overflow-y-scroll scroll-smooth" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL+"/favicon.svg"} />
		<link rel="preconnect" href="https://rsms.me/">
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
		<title>Y4vra's portfolio</title>
		<script>if (window.matchMedia('(prefers-color-scheme: dark)').matches) document.documentElement.classList.toggle("dark");</script>
	</head>
	<body class="
		bg-light-bg dark:bg-dark-bg
		text-light-main-900 dark:text-dark-main-50">
		<slot name="navigation"/>
		<div 
		id="background" 
		class="bg-dots-pattern fixed inset-0 z-0 h-full w-full bg-repeat bg-center filter" 
		></div>
		<style is:global>
		/* LIGHT MODE (Purple) */
		.bg-dots-pattern {
			background-image: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='rgb%28108%2041%20255%29' fill-opacity='0.4'%3E%3Ccircle cx='10' cy='10' r='1.5'/%3E%3Ccircle cx='30' cy='30' r='1.5'/%3E%3C/g%3E%3C/svg%3E");
		}
		.dark .bg-dots-pattern {
			background-image: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='rgb%28255%20201%2063%29' fill-opacity='0.4'%3E%3Ccircle cx='10' cy='10' r='1.5'/%3E%3Ccircle cx='30' cy='30' r='1.5'/%3E%3C/g%3E%3C/svg%3E");
		}
		</style>
		<main class="relative z-10">
			<slot id="start" name="start"/>
			<slot id="portfolio" name="projects"/>
			<slot id="about" name="about"/>
			<slot id="contact" name="contact"/>
		</main>
	</body>
</html>

